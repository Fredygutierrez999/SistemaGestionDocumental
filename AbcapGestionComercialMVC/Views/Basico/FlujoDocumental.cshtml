@{
    ViewBag.Title = "Flujo documental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-success">
    <div class="panel-heading">
        <div class="panel-title">
            Flujo documental

            <div class="btn btn-sm btn-success" onclick="AministrarEstado(-1);">
                Agregar estado
            </div>
        </div>
    </div>
    @using (Html.BeginForm("consultaListadoEmisor", "Basico", FormMethod.Post, new { @ID = "fmrConsultaFlujoDocumental" }))
    {
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2 text-right">
                    ID:
                </div>
                <div class="col-md-1">
                    @Html.TextBox("txt", "", new { @Class = "form-control form-control-sm" })
                </div>
                <div class="col-md-1 text-right">
                    Nombre:
                </div>
                <div class="col-md-4">
                    @Html.TextBox("txtNombre", "", new { @Class = "form-control form-control-sm" })
                </div>
            </div>
        </div>
    }
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-5">
            </div>
            <div class="col-md-2">
                <div class="btn btn-sm btn-success" onclick="ConsultaListadoEstadoFlujo();">
                    Buscar
                </div>
            </div>
        </div>
    </div>
</div>
<div id="divDetalleFlujoDocumental">

</div>

@* FRAGMENTO HTML PARA POPUP VISUALIZAR ARCHIVOS *@
<div class="modal" id="popupAdministradorFlujo" tabindex="-1" role="dialog" z-index="1000000">
    <div class="modal-dialog" id="popupDialogAdministraEmisor" style="width:40%" role="document">
        <div class="modal-content" style="box-shadow: 4px 3px 20px 5px;margin: 10px;z-index:10000000" id="divCuerpoPopupAdministraEstado">

        </div>
    </div>
</div>


@* FRAGMENTO HTML PARA POPUP VISUALIZAR ARCHIVOS *@
<div class="modal" id="popupAdministradorFlujo_Accion" tabindex="-1" role="dialog" z-index="1000000">
    <div class="modal-dialog" style="width:30%" role="document">
        <div class="modal-content" style="box-shadow: 4px 3px 20px 5px;margin: 10px;z-index:10000000" id="divCuerpoPopupAdministraEstado_Accion">

        </div>
    </div>
</div>


<script type="text/javascript" src="~/Scripts/ViewsJS/ControlBasico.js?Version=24092018"></script>
<script type="text/javascript">
    $(document).ready(function () {
        ConsultaListadoEstadoFlujo();
    });
</script>