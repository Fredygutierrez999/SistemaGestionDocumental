@using GestionDocumental.Models.Clases.Radicacion
@model List<clsAppNetFlujoEstados>
@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover table-condensed table-responsive">
        <thead>
            <tr>
                <td>
                    <label>Id</label>
                </td>
                <td>
                    <label>Nombre</label>
                </td>
                <td>
                    <label>Con correo</label>
                </td>
                <td>
                    <label>Seleccionar usuario anterior</label>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (clsAppNetFlujoEstados objItem in Model)
            {
            <tr>
                <td>
                    <a href="javascript:AministrarEstado(@objItem.ID)">@objItem.ID</a>
                </td>
                <td>@objItem.Nombre</td>
                <td>@Html.Raw(objItem.ConCorreo ? "Si" : "No")</td>
                <td>@Html.Raw(objItem.SeleccionaUsuarioAnterior ? "Si" : "No")</td>
            </tr>
            }
        </tbody>
        <tbody></tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
                Sin registros
            </div>
        </div>
    </div>
}
