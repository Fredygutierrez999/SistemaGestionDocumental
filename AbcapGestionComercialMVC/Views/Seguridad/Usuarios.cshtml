
@using AbcapGestionComercialMVC.Models.Clases.Seguridad
@model List<clsAppNetUsuarios>
@{
    ViewBag.Title = "Administración de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary">
    <div class=" panel-heading">
        <div class="row">
            <div class="col-md-3 pt1"><div class="panel-title">Administración de Usuarios</div></div>
            <div class="col-md-5"><div class="btn btn-sm btn-success" onclick="return CreaModificaUsuario(-2);">Crear nuevo usuario</div></div>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Roles", "Seguridad", FormMethod.Get, new { id = "fmrConsultaUsuarios" }))
        {
            @Html.AntiForgeryToken();
            <div class="row">
                <div class="col-md-1 text-right">
                    <label>ID:</label>
                </div>
                <div class="col-md-1">
                    @Html.TextBox("txtID", "", new { @class = "form-control form-control-smX", @style = "Width:100%" })
                </div>
                <div class="col-md-1 text-right">
                    <label>Usuario:</label>
                </div>
                <div class="col-md-3">
                    @Html.TextBox("txtUsuario", "", new { @class = "form-control form-control-smX", @style = "Width:100%" })
                </div>
                <div class="col-md-1 text-right">
                    <label>Nombre:</label>
                </div>
                <div class="col-md-3">
                    @Html.TextBox("txtNombre", "", new { @class = "form-control form-control-smX", @style = "Width:100%" })
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-1">
                    <input type="button" class="btn btn-success btn-sm" onclick="ConsultaUsuarios();" value="Buscar" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-1 text-right">
                    <label>Correo:</label>
                </div>
                <div class="col-md-5">
                    @Html.TextBox("txtCorreoElectronico", "", new { @class = "form-control form-control-smX", @style = "Width:100%" })
                </div>
            </div>
        }
    </div>
</div>
<div class="panel" id="DetalleUsuarios"></div>
@* Popup parala administración de roles *@
<div class="modal modal-sm fade" id="popupAdministrarUsuario" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="cuerpoAdministraUsuario">

        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/ViewsJS/ControlSeguridad.js"></script>
<script type="text/javascript">
    /*SE EJECUTA AL CARGAR LA PAGINA*/
    $(document).ready(function () {
        ConsultaUsuarios();
    });
</script>